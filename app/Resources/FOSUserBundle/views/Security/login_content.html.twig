{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="col align-self-center alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="text-center">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}

    <div class="form-group">
        <div class="col">
            <label for="username"  >
                <span >{{ 'security.login.username'|trans }}</span>
            </label>
        </div>
        <div class="col">
            <input class="col-lg-10 col-md-10 col-sm-10 col-12" type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col">
            <label for="password" >
                <span>{{ 'security.login.password'|trans }}</span>
            </label>
        </div>
        <div class="col">
            <input class="col-lg-10 col-md-10 col-sm-10 col-12" type="password" id="password" name="_password" required="required"/>
        </div>
    </div>


    <br>

    <input type="submit" id="_submit" name="_submit"  value="{{ 'security.login.submit'|trans }}" class="btn btnEditer col-auto" style="padding: 0px;width: 100px;height: 30px"/>
</form>

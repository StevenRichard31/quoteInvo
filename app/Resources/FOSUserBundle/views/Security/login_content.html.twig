{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="col align-self-center alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="text-center">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}

    <div class="form-group">
        <div class="col">
            <label for="username">{{ 'security.login.username'|trans }}</label>
        </div>
        <div class="col">
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col">
            <label for="password">{{ 'security.login.password'|trans }}</label>
        </div>
        <div class="col">
            <input type="password" id="password" name="_password" required="required"/>
        </div>
    </div>


    <br>

    <input type="submit" id="_submit" name="_submit"  value="{{ 'security.login.submit'|trans }}" class="btn  btnLogin"/>
</form>
